<article class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-header bg-info text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <span class="fw-bold">Ticket: {{item.codigo}}</span>
        <span class="badge bg-dark">{{item.fecha}}</span>
    </div>
    
    <div class="card-body">
        <p class="mb-1"><strong>Asunto:</strong>{{item.asunto}}</p>
        <p class="mb-1"><strong>Código:</strong>{{item.codigo}}</p>
        <p class="mb-1"><strong>Solicitante:</strong>{{item.solicitante}}</p>
        <p class="mb-1"><strong>Descripción:</strong>{{item.descripcion}}</p>
        <p class="mb-1"><strong>Fecha:</strong>{{item.fecha}}</p>

        <div class="mt-3 d-flex gap-2">
            <a href="/eliminar/{{item._id}}" class="btn btn-danger btn-sm px-3">Eliminar</a>
            <a href="/editar/{{item._id}}" class="btn btn-warning btn-sm px-3">Editar</a>
            <a href="/descargar/{{item._id}}" class="btn btn-info btn-sm px-3 text-white">Descargar</a>
        </div>
    </div>    
</article>